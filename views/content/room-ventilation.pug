extends ../estimation.pug
include ../estimation-mixins.pug

block page-title
    | Ventilation

block page-number
    | 2.2 of 5

block page-description
    | To calculate your room’s ventilation, choose your activity location’s category.

block progress-bar
    +bars(2, 2)

block progress-bar-subset
    +bars(2,4)

block progress-bar-after
    +bars(0, 2)

block input
    section.space-y-3.px-0.font-sans
        .text-center.space-x-3
            .text-midnight-blue.text-lg.font-black.tracking-normal(class='md:text-xl xl:text-2xl')  What is the location’s category?

            .inline.dropdown.dropdown-end

                button.btn.btn-circle.btn-sm.bg-green.tooltip-btn(tabindex='0')
                    i.fas.fa-question


                .shadow.card.compact.dropdown-content.bg-base-100.rounded-box.w-52(tabindex='0')
                    .card-body
                        p If you think your preferred activity is not located in the given places, kindly choose the similar location.


        .text-center.my-3.justify-center.space-y-3.px-0(class='md:h-136 md:px-20 lg:px-0')
            .grid.grid-cols-3.gap-x-6.gap-y-2.text-midnight-blue(class='sm:h-136 md:h-full md:gap-x-3 md:gap-y-1')
                for ventilation in data.ventilationRates
                    if ventilation['Use In Custom']
                        button.presetBtn.bg-dirty-white.p-1.h-24.w-24.rounded-4xl.font-semibold.place-self-center.shadow-md.transform.transition.duration-300.ease-in-out.text-midnight-blue(name='preset' class='md:p-2 xl:p-3 md:h-32 md:w-32 xl:h-40 xl:w-40 md:rounded-7xl focus:bg-beige active:bg-beige hover:bg-gray-300 focus:scale-105 active:scale-105 hover:scale-105 focus:shadow-xl active:shadow-xl hover:shadow-xl' data-name=ventilation['Name'] data-code=ventilation['Code'])
                            span
                                img.h-14.w-14.m-auto(class='md:w-16 md:h-16 xl:h-20 xl:w-20' src='/static/images/room-ventilation/'+ventilation['Name']+'.svg' alt=ventilation['Name'])
                            span.leading-none.text-sm(class='md:text-normal xl:text-xl') #{ventilation['Name']}
