extends ../estimation.pug
include ../estimation-mixins.pug

block page-title
    span.english-text Room Size
    span.filipino-text Sukat ng Silid

block page-number
    | 2.3 of 5

block page-description
    span.english-text
        | Select from the given presets the approximate size of the room based on your estimation. You may also opt to enter the specific dimension of the room in meters.
    span.filipino-text
        | Pindutin mula sa pagpipilian ang tinatayang laki ng kwarto batay sa iyong pagtatantiya. Maari mo ring ilagay mismo ang partikular na dimensyon ng kwarto (sa metro).

block progress-bar
    +bars(2, 2)

block progress-bar-subset
    +bars(3,4)

block progress-bar-after
    +bars(0, 2)

