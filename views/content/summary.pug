extends ../estimation.pug
include ../estimation-mixins.pug

block page-title
    span.english-text Summary
    span.filipino-text Buod

block page-number
    | 5 of 5

block page-description
    span.english-text
        | Check and edit your selections below. To return to this page, click the go back button (usually the left button beside website URL).
    span.filipino-text
        | Suriin at baguhin ang kinakailangan batay sa mga halaga na matatagpuan sa ibaba. Upang bumalik sa pahinang ito, mangyaring piliin ang kaliwang pindutan na matatagpuan katabi ng URL ng website. 
block progress-bar
    +bars(5,5)


block input
    h3.font-bold.text-2xl Summary
    ul.font-medium.space-y-5.summary-container
        li.summary-item.hidden
            div
                span.summary-key.font-black Key here
                span
                    span.summary-value Value here
                    a.btn.btn-ghost.ml-2.summary-link(href="#") Edit
